FoamFile
{
    format          ascii;
    class           volScalarField;
    location        "0";
    object          epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "../setUp"
flowAngle       #calc "degToRad(270-$wDir)"; // Flow angle wrt x-axis

dimensions      [ 0 2 -3 0 0 0 0 ];

internalField   uniform 0.01;

boundaryField
{
    east
    {
        type            inletOutlet;
        inletValue      uniform 0.01;
        value           uniform 0.01;
    }
    north
    {
        type            slip;
    }
    south
    {
        type            slip;
    }
    west
    {
        type            atmBoundaryLayerInletEpsilon;
        Uref            $Uref;
        Zref            $Zref;
        zDir            ( 0 0 1 );
        flowDir         ( 1 0 0 );
        z0              uniform $z0;
        zGround         uniform 0.75;
    }
    minZ
    {
        type            epsilonWallFunction;
        Cmu             0.09;
        kappa           0.4;
        E               9.8;
        value           $internalField;
    }
    maxZ
    {
        type            slip;
    }
}


